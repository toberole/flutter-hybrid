<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_GlideActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GlideActivity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_DiskLruCacheActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DiskLruCacheActivity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_MyLifecycleActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MyLifecycleActivity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_MyLifecycleRegistryActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MyLifecycleRegistryActivity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_LiveDataActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LiveDataActivity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_ViewModelActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ViewModelActivity"
            android:textAllCaps="false" />


    </LinearLayout>
</ScrollView>